<% @feeds = Eventpost.popular_eventposts_3 %>
<% @feeds.each do |eventpost| %>

  <%= link_to eventpost do %>
  
    <!--人気の記事一覧-->
    <div class=" p-1">
      <div class=" border-black" id="event_image">
        
        <!--// 画像があるときは画像を表示する-->
        <% if eventpost.image.thumb.present? %>
          <%= image_tag(eventpost.image.url(:thumb), class:"image_form" ,id:"link-image", width:"100%" ,height:"170") %>
        <% else %>
          <%= image_tag("no_image.jpg" , class:"image_form" ,id:"link-image", width:"100%" ,height:"170") %>
        <% end %>
              
        
        <div class="bg-black feed-title w-100 p-1">
          <small class="text-white "><b><%= eventpost.title %></b></small>
        </div>
      </div>
    </div>
  <% end %>
  
<% end %>

<style>
#event_image {/*親div*/
  position: relative;/*相対配置*/
  }

#event_image .feed-title {
  position: absolute;/*絶対配置*/
  color: white;/*文字は白に*/
  background-color: black;
  bottom: 0;
  left: 0;
  }
</style>