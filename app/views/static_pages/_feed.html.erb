<% @feeds = Eventpost.popular_eventposts_2 %>
<% @feeds.each do |eventpost| %>
  <!--人気の記事一覧-->
  <div class=" p-1">
    <div class=" border-black" id="event_image">
      
      <!--// 画像があるときは画像を表示する-->
      <% if eventpost.image.present? %>
        <%= image_tag(eventpost.image.url , class:"image_form" ,id:"link-image", width:"100%" ,height:"140") %>
      <% else %>
        <%= image_tag("no_image.jpg" , class:"image_form" ,id:"link-image", width:"100%" ,height:"140") %>
      <% end %>
            
      
      <div class="bg-black feed-title w-100">
        <small class="text-white "><b><%= eventpost.title %></b></small>
      </div>
    </div>
  </div>
<% end %>

<style>
#event_image {/*親div*/
  position: relative;/*相対配置*/
  }

#event_image .feed-title {
  position: absolute;/*絶対配置*/
  color: white;/*文字は白に*/
  background-color: black;
  bottom: 0;
  left: 0;
  }

</style>