<!--人気記事一覧-->
<% @populer = Eventpost.popular_eventposts_2 %>
<ul class="list-unstyled mt-3 mb-3">

  <% @populer.each do |eventpost| %>
    <%= link_to eventpost, class:"pop3_link ", id:"link-decoration" do %>
      <div class="gb-dark m-0" id="pop3_div">
        <div class="" id="event_image">
        
          <!--// 画像があるときは画像を表示する-->
          <% if eventpost.image.thumb.present? %>
            <%= image_tag(eventpost.image.url(:thumb) , class:"image_form  p-1 ", id:"link-image" , width:"100%" ,height:"150") %>
          <% else %>
            <%= image_tag("no_image.jpg" , class:"image_form p-1 ", id:"link-image" , width:"100%" ,height:"150") %>
          <% end %>
          
          <div class="bg-light ">
            <small class="text-black p-2" id="pop3_title"><b><%= eventpost.title %></b></small>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</ul>

<!--修正-->


<style>
#pop3_div{
  width: 16.2%;
  height: 150px;
  display: inline-block;
  border: 1px solid gray; 
  }

  

#event_image {/*親div*/
  position: relative;/*相対配置*/
  }

#pop3_title {
  position: absolute;
  color: black;
  background-color: whitesmoke;
  bottom: 0;
  right: 0;
  left:0;
  opacity: 0.5;
  }

</style>