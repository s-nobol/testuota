<picture>
  <%= link_to post, class:"text-white" do %>
      <!--// 画像があるときは画像を表示する-->
        <% if post.picture.present? %>
          <%= image_tag(user.image.url , class:"image_form ", id:"image", width:"130" ,height:"130" ) %>
        <% else %>
          <%= image_tag("user_image.jpg" , class:"img-fluid img-thumbnail", id:"image", width:"130" ,height:"130") %>
        <% end %>
  <% end %>
</picture>