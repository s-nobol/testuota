<picture>
  <%= link_to post, class:"text-white" do %>
  
      <!--// 画像があるときは画像を表示する-->
      <% if post.picture.thumb.present? %>
        <%= image_tag(post.picture.url(:thumb) , class:"image_form m-1", id:"image", width:"200" ,height:"130" ) %>
      <% else %>
        <%= image_tag("no_image.jpg" , class:"img-fluid m-1", id:"image", width:"200" ,height:"130") %>
      <% end %>
      
  <% end %>
</picture>