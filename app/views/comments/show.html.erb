<!--トップ画-->
<%= render "layouts/top_image"%>

<!--メインバー-->
<%= render "layouts/main_bar"%>


<div class="container">

  <div class="row"> 
  
  
      <div class="col-3 ">
        <p class="border-bottom">ユーザー詳細</p>
        
        <% if @user %>
            <!--ユーザープロフィール-->
            <%= render @user %>
            
            <!--ユーザーステータス--> 
            <p class="border-bottom">ユーザーリンク</p>
            <%= render "users/user_status" %>
        <% end %>
        
      </div>
      
      <div class="col-7 border-bottom">
        <p  class="border-bottom">コメント一覧</p>
        <% if !@comments.nil?  %>
              <%= render  @comments %>
              <%= paginate  @comments, window: 2 %>
        <% end %>
      </div>
  </div>
</div>
