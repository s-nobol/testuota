<div class="mt-5 p-1">
  <h4>新規カテゴリの作成</h4>
  <%= form_for(@category, url: categorys_path ) do |f| %>
  
      <%= render 'shared/error_messages' , object: f.object %>
      <div>
        <!--<div><%#= f.label :カテゴリー名 %></div>-->
          <%= f.text_field :name , class:"w-100 border p-1" %>
      </div>
       
      <div class="text-right mt-3">
        <%= f.submit "カテゴリーを登録", class: "btn btn-dark" %>
      </div>
          
  <% end %>
</div>
