<!--トップ画-->
<%= render "layouts/top_image"%>

<!--メインバー-->
<%= render "layouts/main_bar"%>


<div class="container">

  <h1>Users#show</h1>
  <p>Find me in app/views/users/show.html.erb</p>
  <div>
     <% if @user.admin? %>
       <p class="text-danger">管理者ユーザーです</p>
     <% end %>
  </div>
  

  <div class="row"> 
      <div class="col-3 ">
        <p class="border-bottom">ユーザー詳細</p>
        
        <% if @user %>
            <!--ユーザープロフィール-->
            <%= render @user %>
            
            <!--ユーザーステータス--> 
            <p class="border-bottom">ユーザーリンク</p>
            <%= render "users/user_status" %>
        <% end %>
        
      </div>
      
      <div class="col-7 border-bottom">
        <p  class="border-bottom">カテゴリー一覧</p>
        
        
        <!--記事の作成数-->
        
        <%# if !@posts.nil? %>
            <%#= render @posts %>
            <%#= paginate  @posts, window: 2 %>
        <%# else %>
        
        <%# end %>
        
        <% @categorys.each do |category| %>
          <div>
            <span><%= category.id  %></span>
            <span><%= category.name  %></span>
            <span class="float-right"><%= link_to "削除", category, method: :delete, class:"text-danger"  %></span>
          </div>
            
        <% end %>
        
        
        
        
        
        <!--カテゴリーの新規作成-->
        <%= render "categorys/category_form" %>
      </div>
      
      
         
      <div class="col-2 border-bottom">
        <p  class="border-bottom">人気の記事</p>
        
        <!--記事の作成数-->
        <%# 10.times do %>
          <%#= render "static_pages/feed" %>
        <%# end %>
        
      </div>
  </div>
</div>
