
<div class="container ">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 m-auto">
    
      <h1>Sessions#new</h1>
      <p>Find me in app/views/sessions/new.html.erb</p>
      <h1>Login</h1>
      
      <%= form_for(:session, url: login_path ) do |f| %>
        <%#= render 'shared/error_messages' , object: f.object %>
       
       
        <div> 
          <div><%= f.label :email %></div>
          <%= f.email_field :email , class:"w-100 border p-1" %>
        </div>
        
        <div>
          <div><%= f.label :password %></div>
          <%= f.password_field :password , class:"w-100 border p-1" %>
        </div>
        
        <div class="text-right mt-3">
          <%= f.submit "ログイン", class: "btn btn-dark" %>
        </div>
        
      <% end %>
      
    </div>
  </div>
</div>

<p class="text-danger text-center">フッターいらない↓↓↓</p>