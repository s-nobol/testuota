
<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 m-auto">
    
      <h2><b>ログイン</b></h2>
      
      <%= form_for(:session, url: login_path ) do |f| %>
        <%#= render 'shared/error_messages' , object: f.object %>
       
       
        <div> 
          <div><b><%= f.label :メールアドレス %></b></div>
          <%= f.email_field :email , class:"w-100 border p-1" %>
        </div>
        
        <div>
          <div><b><%= f.label :パスワード %></b>
            <small><%= link_to "パスワードを忘れた", new_password_reset_path %></small>
          </div>
          <%= f.password_field :password , class:"w-100 border p-1" %>
        </div>
        
        <div class="text-right mt-3">
          <%= f.submit "ログイン", class: "btn btn-dark" %>
        </div>
        
      <% end %>
      
    </div>
  </div>
</div>
