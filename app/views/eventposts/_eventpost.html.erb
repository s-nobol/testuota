<div>
    <!--タイトル-->
    <div class="bg-black p-2">
      <h4><b><%= link_to eventpost.title, eventpost ,class:"text-white" %></b></h4>
    </div>
    
    <!--ポストステータス-->
    <div class="bg-light p-2">
    　<span>コメント</span><span>シェア</span> 
    　<%= link_to "編集", edit_eventpost_path(eventpost), class:"text-success" %>
    　<%= link_to "削除", eventpost_path(eventpost), method: :delete, class:"text-danger" %>
    </div>
    
    <!--サブタイトル-->
    <div class="mt-3">
      <%= eventpost.sub_title.html_safe %>
    </div>
    
    <!--もっと読む-->
    
    <% unless controller.action_name == "show"%>
      <%= link_to eventpost do %>
        <div class="bg-light text-center p-2">
          <h5 class="text-dark"><b>もっと読む</b></h5>
        </div>
      <% end %>
    <% end %>
</div>