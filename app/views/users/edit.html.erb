<!--トップ画-->
<%= render "layouts/top_image"%>

<!--メインバー-->
<%= render "layouts/main_bar"%>

<div class="conteiner">

    <%= render "shared/status_bar"%>

  <div class="row"> 
      <div class="col-3 ">
        <p class="border-bottom"><b>ユーザープロフィール</b></p>
        
        <!--ユーザープロフィール-->
        <%= render "users/image_form" %>
        
        <!--ユーザーステータス--> 
        <%= render "users/user_status" %>
        
      </div>
      
      <div class="col-9">
        <p  class="border-bottom"><b>プロフィール編集</b></p>
        <div class="border p-4">
          <%= form_for(@user, method: :patch ) do |f| %>
            <%= render 'shared/error_messages' , object: f.object %>
            
            
            <!--<div>-->
            <!--  <div class="mt-2"><b><%#= f.label :名前  %></b></div>-->
            <!--    <%#= f.text_filed :message , class:"w-100 border p-1" %>-->
            <!--</div>-->
            
            <!--<div>-->
            <!--  <div class="mt-2"><b><%#= f.label :メールアドレス  %></b></div>-->
            <!--    <%#= f.text_filed :message , class:"w-100 border p-1" %>-->
            <!--</div>-->
            
            
            <div>
              <div class="mt-2"><b><%= f.label :ひとこと  %></b></div>
                <%= f.text_area :message , class:"w-100 border p-1" , "rows" => 5 , placeholder: "コメントを入力して下さい"  %>
            </div>
            
            <div class="mt-2">
              <b><%= f.label :住所 %></b>　<%= f.select :address , 
                        [["北海道","北海道"],["青森県","青森県"] ,["岩手県","岩手県"] ,["宮城県","宮城県"] ,["秋田県","秋田県"] ,["山形県","山形県"],
                        ["福島県","福島県"] ,["茨城県","茨城県"] ,["栃木県","栃木県"] ,["群馬県","群馬県"] ,["埼玉県","埼玉県"] ,["千葉県","千葉県"],
                        ["東京都","東京都"] ,["神奈川県","神奈川県"] ,["新潟県","新潟県"] ,["富山県","富山県"] ,["石川県","石川県"] ,["福井県","福井県"], 
                        ["山梨県","山梨県"] ,["長野県","長野県"] ,["岐阜県","岐阜県"] ,["静岡県","静岡県"] ,["愛知県","愛知県"] ,["三重県","三重県"],
                        ["滋賀県","滋賀県"] ,["京都府","京都府"] ,["大阪府","大阪府"] ,["兵庫県","兵庫県"] ,["奈良県","奈良県"] ,["和歌山県","和歌山県"], 
                        ["鳥取県","鳥取県"] ,["島根県","島根県"] ,["岡山県","岡山県"] ,["広島県","広島県"] ,["山口県","山口県"] ,["徳島県","徳島県"], 
                        ["香川県","香川県"] ,["愛媛県","愛媛県"] ,["高知県","高知県"] ,["福岡県","福岡県"] ,["佐賀県","佐賀県"] ,["長崎県","長崎県"],
                        ["熊本県","熊本県"] ,["大分県","大分県"] ,["宮崎県","宮崎県"] ,["鹿児島県","鹿児島県"] ,["沖縄県","沖縄県"]
                        ]
                      %>
            </div>
            
            <div class="mt-2">
              <b><%= f.label :性別 %></b>　<%= f.select :gender , [["男性","男性"],["女性","女性"] ] %>
            </div>
            
            <div class="mt-2">
              <b><%= f.label :誕生日 %></b>　<%= raw sprintf(
                                          f.date_select(
                                            :birthday,
                                            use_month_numbers: true,
                                            start_year: 1930,
                                            end_year: (Time.now.year - 12),
                                            default: Date.new(1989, 1, 1),
                                            date_separator: '%s'),
                                          '年 ', '月 ') + '日' %>
            </div>
            
          
            
            <div class="mt-2"> 
              <%= f.label :メールの通知, class: "checkbox " do %>
                <span><b>メールでの通知を受けとる</b></span>
                <spna class="text-right"><%= f.check_box :notice_email %></spna>
              <% end %>
            </div> 
            
            <div class="mt-2"> 
              <%= f.label :メッセージの通知, class: "checkbox " do %>
                <span><b>メッセージの通知を受けとる</b></span>
                <spna class="text-right"><%= f.check_box :notice_message %></spna>
              <% end %>
            </div>
            
            <div class="text-right mt-3">
              <%= f.submit "保存する", class: "btn btn-primary" %>
            </div>
            
          <% end %>
        
        </div>
      </div>
  </div>
</div>

