<!--トップ画-->
<%= render "layouts/top_image"%>

<!--メインバー-->
<%= render "layouts/main_bar"%>


<div class="container">

  <h1>Users#show</h1>
  <p>Find me in app/views/users/show.html.erb</p>

  <div class="row"> 
      <div class="col-3 ">
        <p class="border-bottom">ユーザープロフィール</p>
        
        <% if @user %>
            <!--ユーザープロフィール-->
            <%= render @user %>
            
            <!--ユーザーステータス--> 
            <p class="border-bottom">ユーザーリンク</p>
            <%= render "users/user_status" %>
        <% end %>
        
      </div>
      
      <div class="col-7 border-bottom">
        <p  class="border-bottom">投稿一覧</p>
        
        
        <!--記事の作成数-->
        <% if !@posts.nil? %>
            <%= render @posts %>
            <%= paginate  @posts, window: 2 %>
        <% else %>
        
        <% end %>
      </div>
      
      
         
      <div class="col-2 border-bottom">
        <p  class="border-bottom">記事の作成</p>
        <p class="text-danger">あとで色の変更!!</p>
        <%= render "users/user_status2" %>

      </div>
  </div>
</div>
