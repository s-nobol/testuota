
<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 m-auto">
    
      <h2><b>新規登録</b></h2>
      
      <%= form_for(@user, url: signup_path ) do |f| %>
        <%= render 'shared/error_messages' , object: f.object %>
        <div>
          <div><b><%= f.label :名前 %></b></div>
            <%= f.text_field :name , class:"w-100 border p-1" %>
        </div>
         
        <div> 
          <div><b><%= f.label :メール %></b></div>
          <%= f.email_field :email , class:"w-100 border p-1" %>
        </div>
        
        <div>
          <div><b><%= f.label :パスワード %></b></div>
          <%= f.password_field :password , class:"w-100 border p-1" %>
        </div>
        
        <div class="text-right mt-3">
          <%= f.submit "登録", class: "btn btn-dark" %>
        </div>
        
      <% end %>
      
    </div>
  </div>
</div>
