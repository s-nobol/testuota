<div class=" bg-white p-2 border"> 
  <!--画像-->
    <div class="image_form rounded-circle text-center mx-auto mt-4" id="img_field" >
      
        <!--// 画像があるときは画像を表示する-->
          <% if user.image.present? %>
            <%= image_tag(user.image.url , class:"image_form rounded-circle" ,id:"icon" , width:"130" ,height:"130") %>
          <% else %>
            <%= image_tag("user_image.jpg" , class:"image_form rounded-circle" ,id:"icon", width:"130" ,height:"130") %>
          <% end %>
    </div>
  
  <!--ユーザー名-->
  <div class="mt-3">
    <span><b><%= link_to "#{user.name}さん" , user ,class:"text-dark" %></b> user_id: <%= user.id %></span></br>
    <span><%= user.email %></span>
    <span><%= user.address %></span>
    <span><%= user.gender %></span>
  </div>
  
  <div>
    <span><%= link_to "投稿する", new_post_path, class:"" %></span></br>
    
  </div>
  
  <!--ユーザー編集-->
  <div>
    <%= link_to "ユーザー編集", edit_user_path(@user) ,class:"" %>
  </div>
</div>


